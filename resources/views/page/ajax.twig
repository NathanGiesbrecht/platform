<div class="pull-right" style="position: absolute;
            right: 17px;
            top: 3px; padding:5px;">
    {% for button in page.buttons %}
        {{ button.render({size: 'sm'}) |raw }}
    {% endfor %}
</div>

{{ page.content() |raw }}

<script>
    $(function () {
        $('#jForm').on('submit', function (e) {
            let form = $(this);
            $.post(form.attr('action'), form.serializeArray(), function (data) {

                if (!data.success) {
                    messages = [];
                    $.each(data.errors, function (field, errors) {
                        messages.push(errors.join('\n'));
                    });
                    alert(messages.join('\n'));

                    return false;
                }

                alert('success');
                return false;
            });
            e.preventDefault();
        });
    });
</script>
